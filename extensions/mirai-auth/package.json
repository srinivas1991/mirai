{
	"name": "mirai-auth",
	"displayName": "Mirai Authentication",
	"description": "Authentication provider for Mirai AI services",
	"version": "1.0.0",
	"publisher": "mirai",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onAuthenticationRequest:mirai",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"authentication": [
			{
				"id": "mirai",
				"label": "Mirai"
			}
		],
		"uriHandlers": [
			{
				"scheme": "mirai",
				"authority": "mirai.mirai-auth"
			}
		],
		"commands": [
			{
				"command": "mirai-auth.signIn",
				"title": "Sign in to Mirai",
				"category": "Mirai"
			},
			{
				"command": "mirai-auth.signOut",
				"title": "Sign out of Mirai",
				"category": "Mirai"
			},
			{
				"command": "mirai-auth.test",
				"title": "Test Mirai Auth Provider",
				"category": "Mirai"
			},
			{
				"command": "mirai-auth.testUri",
				"title": "Test URI Handler",
				"category": "Mirai"
			}
		],
		"configuration": {
			"title": "Mirai Authentication",
			"properties": {
				"mirai-auth.serverUrl": {
					"type": "string",
					"default": "http://localhost:5173",
					"description": "Mirai server URL",
					"scope": "application"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "16.x",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"axios": "^1.6.0"
	}
}

