{
	"name": "mirai-auth",
	"displayName": "Mirai Authentication",
	"description": "Authentication provider for Mirai AI services",
	"version": "1.0.0",
	"publisher": "mirai",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onAuthenticationRequest:mirai",
		"onAuthenticationRequest:mirai-github",
		"onStartupFinished",
		"onView:mirai-auth.githubRepos"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"scm": [
				{
					"id": "mirai-auth.githubRepos",
					"name": "GitHub Repositories",
					"icon": "$(github)",
					"contextualTitle": "GitHub Repositories",
					"visibility": "visible"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "mirai-auth.githubRepos",
				"contents": "No GitHub repositories loaded.\n\n**Choose an authentication method:**\n\n[OAuth (Recommended)](command:mirai-auth.refreshGitHubRepos)\n\n[Personal Access Token](command:mirai-auth.addGitHubPAT)\n\nOAuth will show \"Authorize Mirai\" and is managed automatically.\n\nPersonal Access Token gives you full control but requires manual setup.",
				"when": "true"
			}
		],
		"authentication": [
			{
				"id": "mirai",
				"label": "Mirai"
			},
			{
				"id": "mirai-github",
				"label": "GitHub (Mirai)"
			}
		],
		"uriHandlers": [
			{
				"scheme": "mirai",
				"authority": "mirai.mirai-auth"
			}
		],
		"commands": [
			{
				"command": "mirai-auth.signIn",
				"title": "Sign in to Mirai",
				"category": "Mirai"
			},
			{
				"command": "mirai-auth.signOut",
				"title": "Sign out of Mirai",
				"category": "Mirai"
			},
			{
				"command": "mirai-auth.addGitHubPAT",
				"title": "Add GitHub Personal Access Token",
				"category": "GitHub",
				"icon": "$(key)"
			},
			{
				"command": "mirai-auth.removeGitHubPAT",
				"title": "Remove GitHub Personal Access Token",
				"category": "GitHub",
				"icon": "$(trash)"
			},
			{
				"command": "mirai-auth.refreshGitHubRepos",
				"title": "Refresh GitHub Repositories",
				"category": "GitHub",
				"icon": "$(refresh)"
			},
			{
				"command": "mirai-auth.listGitHubRepos",
				"title": "List My GitHub Repositories",
				"category": "GitHub",
				"icon": "$(repo)"
			},
			{
				"command": "mirai-auth.showRepoActions",
				"title": "Show Repository Actions",
				"category": "GitHub"
			},
			{
				"command": "mirai-auth.test",
				"title": "Test Mirai Auth Provider",
				"category": "Mirai"
			},
			{
				"command": "mirai-auth.testUri",
				"title": "Test URI Handler",
				"category": "Mirai"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "mirai-auth.refreshGitHubRepos",
					"when": "view == mirai-auth.githubRepos",
					"group": "navigation@1"
				},
				{
					"command": "mirai-auth.addGitHubPAT",
					"when": "view == mirai-auth.githubRepos",
					"group": "navigation@2"
				},
				{
					"command": "mirai-auth.removeGitHubPAT",
					"when": "view == mirai-auth.githubRepos",
					"group": "navigation@3"
				}
			],
			"view/item/context": [
				{
					"command": "mirai-auth.showRepoActions",
					"when": "view == mirai-auth.githubRepos && viewItem == githubRepository",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"title": "Mirai Authentication",
			"properties": {
				"mirai-auth.serverUrl": {
					"type": "string",
					"default": "http://localhost:5173",
					"description": "Mirai server URL",
					"scope": "application"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "16.x",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"axios": "^1.6.0"
	}
}

