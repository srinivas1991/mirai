{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch VS Code with Mirai Extensions",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/extensions/mirai-auth",
				"--extensionDevelopmentPath=${workspaceFolder}/extensions/mirai-figma",
				"--extensionDevelopmentPath=${workspaceFolder}/extensions/mirai-jira"
			],
			"outFiles": [
				"${workspaceFolder}/extensions/*/out/**/*.js"
			],
			"preLaunchTask": "compile-mirai-extensions"
		}
	]
}